extends homelayout

block content
  div
    p(class=err?'err':'')= name

  div
    p
      a(href='/friends/'+id) Show your friends' wishlist.

  .list
    p
      strong Your Groups
    each group in groups
      p
        a(href='/'+group.url)= group.name
  .list
    p
      a(href='/!/check') Check for games owned
    p
      a(href='http://www.steamgifts.com/forum/UHlGN',target='_blank') Visit the forum topic
    p
      a(href='/!/donate') Donate
    p
      a(href='/!/logout') Logout
